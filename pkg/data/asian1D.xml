<?xml version="1.0" encoding="UTF-8" ?>
<thetaconfigurations>
  <montecarlo>
  	<PATH_NR value="100000"/>
  	<EVALUATION mode="-1"/>    <!-- "-1"=backward "1"=forward -->
  	<RANDOM_GENERATOR seed="20"/>
  </montecarlo>
  <!-- type of the solver: type="multigrid" , type="external"
       externtype="SGpp" or ...  -->
  <solver type="multigrid" externtype="SGpp">
      <!-- This is right now used to limit the combi technique , after this time the fullgrids will be forced to be combined -->
	  <multigrid-solver>
	  	  <minCombiStep value="0.1"/>
	  	  <CombiStepControl value="1e-3"/>
	      <maxCombiStep value="0.1"/>
	      <solverEps value="1e-8"/>
	          <!-- The minimum value of one time step (inside the solver) 
	           For solvers with fixed time step this can be taken as a fix timestep -->
		  <mindt value="0.0001"/>
	          <!-- The maximum value of one time step (inside the solver) -->
		  <maxdt value="0.01"/>
		  <usepredictor value="true"/>
		  <useTimeStepControl value="true"/>
		  <timeStepControl value="1e-4"/>
		  <timeStepControlInfNorm value="true"/>
		  <predictorUnderRelaxCoef value="1.0"/>
	  </multigrid-solver>
	  <SGpp-solver>
          <!-- These are specific values which are needed by the BS Sgpp solver -->
          <dt value="0.001"/>
          <odeSolverType value="CrNic"/>
          <maxIt value="400"/>
          <eps_cg value="1e-6"/>
      </SGpp-solver>
  </solver>

  <!-- Here we specify the grid properies (usually these are sparse grid properties) 
   sparsegrid , fullgrid -->
  <gridproperties>
	  <GRID_TYPE value="fullgrid"/>
	  <DEBUG_PLOTTING value="true" gridspecificplotting="false"/>
	  <MAX_LEVEL value="5"/>
	  <USE_SCALING value="true"/>
	  <DIMENSION_ADPTIVITY value="false" level-vect="4,6"/>
	  <combigrid>
			<USE_OPTICOM value="false"/>
			<COMBI_DIAGONAL_CUT_LEVEL value="-2.0"/>
	  </combigrid>
	  <convergence-tool>
	        <CONV_LOWEST_LEVEL value="4"/>
	        <CONV_REF_LEVEL value="8"/>
	  </convergence-tool>
	  <adaptive-grid>
			<!-- possible refinement modes: "classic", "maxLevel" -->
			<REFINEMENT_MODE value="classic"/>
			<MAX_REFINE_LEVEL value="10"/>
			<!-- possibly, this will not be needed later any more -->
			<NUM_ADAPT_REFINE value="6"/>
			<REFINE_THRESHOLD value="1e-10"/>
			<!-- possible adaption modes: "none", "coarsen", "refine", "coarsenNrefine" -->
			<ADAPTION_MODE value="coarsen"/>
			<COARSEN_THRESHOLD value="1e-6"/>		  
	  </adaptive-grid>
  </gridproperties>

  <!-- Here we define the starting domain end the end evaluation points 
      min-max are the starting domain "evaluation" shows the evaluation point (per axis)-->
  <domain>
	    <variable name="S" min="95" max="105" evaluation="100" minNormDomain="95" maxNormDomain="105"/>
  </domain>

  <thetaoperator>
	<!-- There can be different type of models depending on the type argument -->
	<DIFFUSION_VARIABLES>
	  <variable name="S" type="GB" drift="0.05" convec="0.05" sigma="0.4"/>
	</DIFFUSION_VARIABLES>
	<RISK_FREE_RATE value="0.05" variable_coupled=""/>
	<!-- the correlation matrix -->
	<CORRELATIONS>
	    <correlation value="1.0"/>
	</CORRELATIONS>
	<STANDARD_DEVIATION_FACTORS>
	  <STANDARD_DEVIATION_FACTOR value="8"/>
	</STANDARD_DEVIATION_FACTORS>
  </thetaoperator>
  
</thetaconfigurations>